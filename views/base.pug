doctype html
html(lang="en")
  head
    title=title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/generatoc/build/generatoc.min.css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  body
    include nav
    .m-2.mx-sm-5
      block content
        a(href=`/edit/${title.replaceAll(" ", "_")}/`) Edit Page
        if content
          h1=title
          #toc.m-0
          #content!=content
        else
          p This page is currently empty!
    script if (window.matchMedia("(prefers-color-scheme: dark)").matches) document.body.classList.add("bg-dark", "text-light");
    script(src="https://cdn.jsdelivr.net/npm/generatoc/build/generatoc.min.js")
    script.
      generatoc.init({
        content: "#content",
        heading: ["h2", "h3"],
        selector: "#toc",
        scrollHistory: {readableSpace: true},
        duration: 2,
      });
    style.
      @media only screen and (max-width: 540px) {
        #toc {
          display: block;
          position: static;
        }
      }
